{
	"prettier.printWidth": 100, // Specify the line length that the printer will wrap on.
	"prettier.tabWidth": 2, // Specify the number of spaces per indentation-level.
	"prettier.useTabs": false, // Indent lines with tabs instead of spaces.
	"prettier.trailingComma": "es5", // Print trailing commas wherever possible in ES5 (objects, arrays, etc.)
	"prettier.semi": true, // Print semicolons at the ends of statements.
	"prettier.singleQuote": true, // Use single quotes instead of double quotes.
	"prettier.bracketSpacing": true, // Print spaces between brackets in object literals.
	"prettier.arrowParens": "always" // Include parentheses around a sole arrow function parameter.
}
